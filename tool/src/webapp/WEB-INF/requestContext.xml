<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!-- list the backing beans here -->

	<!-- rich text evolver bean def -->
	<bean id="richTextEvolver"
		class="org.springframework.beans.factory.config.BeanReferenceFactoryBean">
		<property name="targetBeanName" value="sakaiFCKTextEvolver" />
	</bean>

	<!-- Renderers -->
	<bean id="NavbarRenderer"
		class="org.sakaiproject.blogwow.tool.producers.NavBarRenderer">
      <property name="site" ref="sakai-Site"></property>
      <property name="userid" ref="sakai-UserID"></property>
     <!--  <property name="blogfinder" ref="org.sakaiproject.blogwow.logic.PersonalBlogFinder"></property> -->
     <property name="blogLogic" ref="org.sakaiproject.blogwow.logic.BlogLogic"></property>
	</bean>

	<!-- list the producer beans here -->
	<bean
		class="org.sakaiproject.blogwow.tool.producers.AddEntryProducer">
		<property name="navBarRenderer" ref="NavbarRenderer"></property>
		<property name="richTextEvolver" ref="richTextEvolver"></property>
		<property name="messageLocator" ref="messageLocator"></property>
	</bean>

	<bean class="org.sakaiproject.blogwow.tool.producers.BlogViewProducer">
      <property name="navBarRenderer" ref="NavbarRenderer"></property>
      <property name="blogLogic" ref="org.sakaiproject.blogwow.logic.BlogLogic"></property>
      <property name="entryLogic" ref="org.sakaiproject.blogwow.logic.EntryLogic"></property>
      <property name="userid" ref="sakai-UserID"></property>
	</bean>

	<bean class="org.sakaiproject.blogwow.tool.producers.CommentsProducer">
	</bean>

	<bean class="org.sakaiproject.blogwow.tool.producers.HomeProducer">
		<property name="navBarRenderer" ref="NavbarRenderer"></property>
      <property name="blogLogic" ref="org.sakaiproject.blogwow.logic.BlogLogic"></property>
      <property name="entryLogic" ref="org.sakaiproject.blogwow.logic.EntryLogic"></property>
      <property name="site" ref="sakai-Site"></property>
      <property name="userid" ref="sakai-UserID"></property>
	</bean>

	<bean class="org.sakaiproject.blogwow.tool.producers.MySettingsProducer">
		<property name="navBarRenderer" ref="NavbarRenderer"></property>
		<property name="richTextEvolver" ref="richTextEvolver"></property>
        <property name="blogLogic" ref="org.sakaiproject.blogwow.logic.BlogLogic"></property>
	</bean>

	<bean class="org.sakaiproject.blogwow.tool.producers.PermissionsProducer">
		<property name="sessionManager"
			ref="org.sakaiproject.tool.api.SessionManager" />
		<property name="site" ref="sakai-Site" />
		<property name="messageLocator" ref="messageLocator" />
	</bean>

	<bean class="org.sakaiproject.blogwow.tool.producers.BlogRSSProducer">
	</bean>

  <!-- OTP --> 
  <bean id="BlogLocator" class="org.sakaiproject.blogwow.tool.otp.BlogLocator">
    <property name="blogLogic" ref="org.sakaiproject.blogwow.logic.BlogLogic"></property>
  </bean>
  <bean id="EntryLocator" class="org.sakaiproject.blogwow.tool.otp.EntryLocator">
    <property name="entryLogic" ref="org.sakaiproject.blogwow.logic.EntryLogic"></property>
    <property name="blogLogic" ref="org.sakaiproject.blogwow.logic.BlogLogic"></property>
    <property name="site" ref="sakai-Site"></property>
    <property name="userid" ref="sakai-UserID"></property>
  </bean>
  
  <!-- Commands -->
  <bean id="RemoveBlogEntryCmd" 
    class="org.sakaiproject.blogwow.tool.commands.RemoveEntryCommand">
    <property name="entryLogic" ref="org.sakaiproject.blogwow.logic.EntryLogic"></property>
  </bean>

</beans>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-blogwow-test-impl</artifactId>
      <version>${sakai.version}</version>
      <scope>provided</scope>
    </dependency>
		<dependency>
			<groupId>org.sakaiproject</groupId>
			<artifactId>sakai-util</artifactId>
			<version>${sakai.version}</version>
		</dependency>
    <dependency>
